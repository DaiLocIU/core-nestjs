{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es6",
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@rucken/core-nestjs": [
        "libs/rucken/core-nestjs/src"
      ],
      "@rucken/core-nestjs/*": [
        "libs/rucken/core-nestjs/src/*"
      ],
      "@rucken/auth-nestjs": [
        "libs/rucken/auth-nestjs/src"
      ],
      "@rucken/auth-nestjs/*": [
        "libs/rucken/auth-nestjs/src/*"
      ]
    }
  },
  "exclude": [
    "client",
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "**/*-spec.ts",
    "**/*.js"
  ]
}